@model EditoraDomain.Entities.Livro
@{
    ViewData["Title"] = "Adicionar Autor";
}

<h1>Adicionar Autor</h1>

    <div class="row">
    <div class="col-md-4">
        <form asp-action="AddAutor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" value="@Model.Id" disabled />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="AutorId"  class="control-label"></label>
                <input for="AutorId"  class="form-control" />
                
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>